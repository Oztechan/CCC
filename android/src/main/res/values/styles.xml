<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="hintTextColor">@color/color_text_weak</item>
        <item name="android:buttonTint">@color/color_accent</item>
        <item name="android:itemBackground">@color/color_background_weak</item>
        <item name="android:editTextColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text_weak</item>
        <item name="android:tint">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:navigationBarColor">@color/color_background_strong</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- Dialog -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/color_background_dialog</item>
        <item name="android:textColorPrimary">@color/color_text_message_dialog</item>
        <item name="android:textColorAlertDialogListItem">@color/color_text_message_dialog</item>
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogPositiveStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNegativeStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AlertDialogNeutralStyle</item>
    </style>

    <style name="AlertDialogTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/color_text_title_dialog</item>
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogPositiveStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_positive_button_dialog</item>
    </style>

    <style name="AlertDialogNegativeStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_neutral_button_dialog</item>
    </style>

    <style name="AlertDialogNeutralStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_neutral_button_dialog</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:src">@drawable/rounded_dialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/color_text</item>
    </style>

    <style name="AppTheme.Fullscreen.SplashTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Size -->
    <style name="FitStyle">
        <item name="android:layout_width">@dimen/fit</item>
        <item name="android:layout_height">@dimen/fit</item>
    </style>

    <style name="WrapStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WideStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WideFitStyle">
        <item name="android:layout_width">@dimen/margin_zero</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Base -->
    <style name="BarBaseImageView">
        <item name="android:layout_width">@dimen/currency_icon_size</item>
        <item name="android:layout_height">@dimen/currency_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_eight</item>
        <item name="android:layout_marginStart">@dimen/margin_eight</item>
        <item name="srcCompat">@color/transparent</item>
    </style>

    <style name="BaseLayoutStyle" parent="MatchStyle">
        <item name="android:background">@color/color_background_strong</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="android:layout_marginTop">@dimen/margin_twelve</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@color/color_background_strong</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="BaseItemSeparatorStyle">
        <item name="android:layout_width">@dimen/margin_zero</item>
        <item name="android:layout_height">@dimen/height_separator</item>
        <item name="android:layout_marginEnd">@dimen/margin_eight</item>
        <item name="android:background">@color/color_text_weak</item>
    </style>

    <!-- Text -->
    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_l</item>
    </style>

    <style name="ItemTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextStyleSmall" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>

    <!-- Setting window animation -->
    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Slide -->
    <style name="SlideLinearLayout">
        <item name="android:layout_marginLeft">@dimen/margin_eight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dots_height</item>
        <item name="android:layout_marginBottom">@dimen/dots_margin_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SlideProgressBar" parent="WrapStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/dots_margin_bottom</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SlideViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_separator</item>
        <item name="alpha">.1</item>
        <item name="android:background">@color/color_text_weak</item>
    </style>

    <style name="SlideButtonNext" parent="WrapStyle">
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:background">@null</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="SlideLayout" parent="MatchStyle">
        <item name="android:paddingBottom">@dimen/padding_bottom_slide_layout</item>
        <item name="android:background">@color/color_background_strong</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BaseSlideStyle">
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SlideTitle" parent="BaseSlideStyle">
        <item name="android:textSize">@dimen/text_size_xxl</item>
    </style>

    <style name="SlideSubTitle" parent="BaseSlideStyle">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_left_right_slide_item</item>
        <item name="android:paddingRight">@dimen/padding_left_right_slide_item</item>
        <item name="android:layout_marginTop">@dimen/margin_top_slide_items</item>
    </style>

    <style name="SlideDescription" parent="SlideSubTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Keyboard -->
    <style name="KeyboardTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_keyboard</item>
    </style>

    <style name="SubKeyboardTableRowStyle" parent="MatchStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Bar -->
    <style name="LayoutBar">
        <item name="android:background">@color/color_background_strong</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/margin_eight</item>
    </style>

    <style name="BarTextStyle" parent="WrapStyle">
        <item name="android:layout_marginTop">@dimen/margin_eight</item>
        <item name="android:layout_marginBottom">@dimen/margin_eight</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!-- Calculator -->
    <style name="CalculatorToolbarTextStyle" parent="FitStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAppearance">@style/BaseTextStyle</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:paddingTop">@dimen/progress_bar_margin_top</item>
        <item name="android:layout_width">@dimen/progress_bar_height_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height_width</item>
    </style>

    <style name="DataStateStyle" parent="WrapStyle">
        <item name="android:textSize">@dimen/text_size_xxs</item>
        <item name="android:drawablePadding">@dimen/margin_four</item>
        <item name="android:layout_marginBottom">@dimen/margin_two</item>
    </style>

    <style name="SettingsButtonStyle" parent="WrapStyle">
        <item name="android:src">@drawable/ic_settings</item>
        <item name="android:paddingEnd">@dimen/margin_eight</item>
        <item name="android:padding">@dimen/margin_eight</item>
    </style>

    <!-- Bar Bottom Sheet Dialog -->
    <style name="BottomSheetTitleStyle" parent="WrapStyle">
        <item name="android:layout_width">@dimen/fit</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/BaseTextStyle</item>
        <item name="android:padding">@dimen/margin_eight</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <!-- Currencies -->
    <style name="CurrenciesToolbarTextStyle">
        <item name="android:layout_width">@dimen/fit</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/txt_currencies</item>
        <item name="android:textAppearance">@style/BaseTextStyle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="BarButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextStyleSmall</item>
    </style>

    <style name="DoneButtonStyle" parent="SelectButtonStyle">
        <item name="android:drawableEnd">@drawable/ic_done</item>
        <item name="android:text">@string/btn_done</item>
        <item name="android:paddingEnd">@dimen/margin_eight</item>
        <item name="android:background">@color/color_background_weak</item>
    </style>

    <style name="SelectButtonStyle" parent="BarButtonStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/color_background_strong</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:text">@string/select</item>
    </style>

    <style name="SearchViewStyle" parent="WrapStyle">
        <item name="android:maxWidth">@dimen/max_width_search_view</item>
        <item name="queryHint">@string/search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@drawable/ic_search_hint</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="SelectYourCurrenciesStyle" parent="WrapStyle">
        <item name="android:layout_marginLeft">@dimen/margin_eight</item>
        <item name="android:text">@string/txt_select_currencies</item>
    </style>

    <style name="SelectAtLeastTwoCurrenciesStyle" parent="SelectYourCurrenciesStyle">
        <item name="android:text">@string/choose_at_least_two_currency</item>
    </style>

    <!-- Item -->
    <style name="BaseItemLayout">
        <item name="android:padding">@dimen/margin_two</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_item</item>
        <item name="android:paddingLeft">@dimen/margin_four</item>
        <item name="android:paddingRight">@dimen/margin_zero</item>
    </style>

    <style name="BarItemLayout" parent="BaseItemLayout">
        <item name="android:background">@drawable/selector_bar</item>
    </style>

    <!-- Calculator Item -->
    <style name="CalculatorItemImageView">
        <item name="android:layout_marginTop">@dimen/margin_four</item>
        <item name="android:layout_marginEnd">@dimen/margin_four</item>
        <item name="android:layout_marginRight">@dimen/margin_four</item>
        <item name="android:layout_marginBottom">@dimen/margin_four</item>
        <item name="android:layout_width">@dimen/currency_icon_size</item>
        <item name="android:layout_height">@dimen/currency_icon_size</item>
    </style>

    <style name="BaseCalculatorItemTextStyle" parent="WrapStyle">
        <item name="android:layout_marginTop">@dimen/margin_four</item>
        <item name="android:layout_marginBottom">@dimen/margin_four</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/margin_zero</item>
        <item name="android:paddingLeft">@dimen/margin_zero</item>
        <item name="android:paddingRight">@dimen/margin_four</item>
        <item name="android:paddingEnd">@dimen/margin_four</item>\
        <item name="android:textAppearance">@style/ItemTextStyle</item>
    </style>

    <style name="CalculatorItemAmountTextStyle" parent="BaseCalculatorItemTextStyle">
        <item name="android:paddingStart">@dimen/margin_two</item>
        <item name="android:paddingLeft">@dimen/margin_two</item>
        <item name="android:paddingRight">@dimen/margin_zero</item>
        <item name="android:paddingEnd">@dimen/margin_zero</item>
    </style>

    <style name="CalculatorItemSymbolTextStyle" parent="CalculatorItemAmountTextStyle">
        <item name="android:paddingRight">@dimen/margin_four</item>
        <item name="android:paddingEnd">@dimen/margin_four</item>
        <item name="android:textAppearance">@style/TextStyleSmall</item>
    </style>

    <style name="CalculatorItemTypeTextStyle" parent="BaseCalculatorItemTextStyle">
        <item name="android:layout_marginEnd">@dimen/margin_eight</item>
        <item name="android:layout_marginRight">@dimen/margin_eight</item>
    </style>

    <!-- Settings -->
    <style name="SettingsLayoutStyle" parent="MatchStyle">
        <item name="android:background">@color/color_background_strong</item>
    </style>

    <style name="SettingsScrollViewStyle" parent="FitStyle">
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="CurrenciesBackButtonStyle" parent="WrapStyle">
        <item name="android:padding">@dimen/margin_eight</item>
    </style>

    <style name="BackButtonStyle" parent="CurrenciesBackButtonStyle">
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="SettingsToolbarTextStyle" parent="CurrenciesToolbarTextStyle">
        <item name="android:text">@string/txt_settings</item>
    </style>

    <!-- Settings Item -->
    <style name="SettingsItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_settings_item_layout</item>
        <item name="android:background">@drawable/selector_item</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsItemRowStyle">
        <item name="android:layout_width">@dimen/margin_zero</item>
        <item name="android:layout_height">@dimen/height_settings_item_row</item>
        <item name="android:padding">@dimen/margin_eight</item>
        <item name="android:paddingTop">@dimen/margin_eight</item>
        <item name="android:paddingBottom">@dimen/margin_eight</item>
    </style>

    <style name="SettingsItemIconStyle" parent="WrapStyle">
        <item name="android:layout_margin">@dimen/margin_four</item>
        <item name="android:layout_width">@dimen/width_height_settings_icon</item>
        <item name="android:layout_height">@dimen/width_height_settings_icon</item>
    </style>

    <style name="SettingsItemSeparator" parent="BaseItemSeparatorStyle">
        <item name="android:layout_marginStart">@dimen/margin_start_settings_item_separator</item>
    </style>

    <style name="SettingsItemArrow" parent="WrapStyle">
        <item name="android:src">@drawable/ic_forward</item>
    </style>

    <style name="SettingsItemTitle" parent="WrapStyle">
        <item name="android:layout_marginStart">@dimen/margin_twelve</item>
        <item name="android:layout_marginTop">@dimen/margin_four</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="SettingsItemSubTitle" parent="WrapStyle">
        <item name="android:layout_marginStart">@dimen/margin_twelve</item>
        <item name="android:layout_marginBottom">@dimen/margin_four</item>
        <item name="android:textColor">@color/color_text_weak</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
    </style>

    <style name="SettingsItemValue" parent="WrapStyle">
        <item name="android:gravity">end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textSize">@dimen/text_size_xxs</item>
        <item name="android:textColor">@color/color_text_weak</item>
        <item name="android:layout_marginEnd">@dimen/margin_twelve</item>
    </style>

    <!-- Currencies Item -->
    <style name="CurrenciesItemImageView" parent="CalculatorItemImageView">
        <item name="android:layout_marginTop">@dimen/margin_two</item>
        <item name="android:layout_marginBottom">@dimen/margin_two</item>
    </style>

    <style name="CurrenciesItemText">
        <item name="android:layout_width">@dimen/fit</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_two</item>
        <item name="android:layout_marginBottom">@dimen/margin_two</item>
        <item name="android:layout_marginEnd">@dimen/margin_four</item>
        <item name="android:layout_marginRight">@dimen/margin_four</item>
        <item name="android:layout_marginStart">@dimen/margin_eight</item>
        <item name="android:layout_marginLeft">@dimen/margin_eight</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextStyleSmall</item>
    </style>

    <style name="CurrenciesItemCheckBoxStyle" parent="WrapStyle">
        <item name="android:layout_marginTop">@dimen/margin_two</item>
        <item name="android:layout_marginEnd">@dimen/margin_two</item>
        <item name="android:layout_marginRight">@dimen/margin_two</item>
        <item name="android:layout_marginBottom">@dimen/margin_two</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Bar -->
    <style name="BarItemText" parent="CurrenciesItemText">
        <item name="android:textAppearance">@style/ItemTextStyle</item>
        <item name="android:layout_marginTop">@dimen/margin_four</item>
        <item name="android:layout_marginBottom">@dimen/margin_four</item>
    </style>

    <style name="BarItemImageView" parent="CurrenciesItemImageView">
        <item name="android:layout_marginTop">@dimen/margin_four</item>
        <item name="android:layout_marginBottom">@dimen/margin_four</item>
    </style>

    <!-- Ad -->
    <style name="BaseBannerAdStyle">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">@dimen/fit</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseRecyclerViewStyle" parent="FitStyle">
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="BottomSheetDialogRecyclerViewStyle" parent="BaseRecyclerViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_background_weak</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/margin_fifty_six</item>
    </style>

    <!-- Ad Remove -->
    <style name="AdRemoveItemLayoutStyle" parent="WideStyle">
        <item name="android:background">@color/color_background_weak</item>
    </style>

    <style name="TextAdRemoveItemStyle" parent="WrapStyle">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">@dimen/padding_ad_remove_item_layout</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="AdRemoveItemSeparatorStyle" parent="BaseItemSeparatorStyle">
        <item name="android:layout_marginStart">@dimen/margin_eight</item>
    </style>
</resources>
