<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SlideLayout">

    <TextView
        style="@style/SlideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_intro_title" />

    <ImageView
        android:layout_width="@dimen/height_width_app_logo"
        android:layout_height="@dimen/height_width_app_logo"
        android:layout_marginTop="@dimen/margin_top_slide_items"
        android:src="@drawable/ic_launcher_foreground"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/SlideSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_intro_text" />
</LinearLayout>