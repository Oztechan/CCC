<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SlideLayout">

    <TextView
        style="@style/SlideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_dark_mode_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_slide_items"
        android:src="@drawable/ic_dark_mode"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/SlideSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_dark_mode_text_1" />

    <TextView
        style="@style/SlideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_dark_mode_text_2" />
</LinearLayout>