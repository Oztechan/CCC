<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="mustafaozhan.github.com.mycurrencies.ui.main.calculator.CalculatorViewModel" />

        <variable
            name="event"
            type="mustafaozhan.github.com.mycurrencies.ui.main.calculator.CalculatorEvent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/LayoutBar"
        android:onClick="@{() -> event.onBarClick()}">

        <ImageView
            android:id="@+id/iv_base"
            style="@style/BarBaseImageView"
            app:backgroundByName="@{vm.state.base}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_output"
            style="@style/BarTextStyle"
            android:text="@{vm.preferencesRepository.currentBase == `NULL` ? `` : `  `+vm.preferencesRepository.currentBase+`  `+ (vm.state.output!=`` ? `=  `+vm.state.output+` ` :``)}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_base"
            app:layout_constraintStart_toEndOf="@+id/iv_base"
            app:layout_constraintTop_toTopOf="@+id/iv_base" />

        <TextView
            android:id="@+id/txt_symbol"
            style="@style/BarTextStyle"
            android:text="@{vm.state.output!=`` ? vm.state.symbol : ``}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_base"
            app:layout_constraintStart_toEndOf="@+id/txt_output"
            app:layout_constraintTop_toTopOf="@+id/iv_base" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>